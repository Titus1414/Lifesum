@model IEnumerable<Lifesum.Models.Category>

@{
    ViewData["Title"] = "Edit";
}

<link href="~/css/main.css" rel="stylesheet" />
<link href="~/Home/Edit/dore.light.greenlime.css" rel="stylesheet" />

@*<link href="~/Tags/css/tagsinput.css" rel="stylesheet" />*@

@foreach (var item in Model)
{
    <div class="card mb-4">
        <div class="card-body">
            <h5 class="mb-4">Edit Category</h5>
            <form action="Edit" method="post" class="needs-validation tooltip-label-right" novalidate>
                <input type="hidden" name="CategoryId" value="@item.CategoryId" class="form-control" required>
                <div class="form-group position-relative error-l-50">
                    <label>Title</label>
                    <input type="text" name="title" value="@item.title" class="form-control" required>
                    <div class="invalid-tooltip">
                        Title is required!
                    </div>
                </div>
                <div class="form-group position-relative error-l-50">
                    <label>Servings</label>
                    <input type="text" name="servings" value="@Html.DisplayFor(modelItem => item.servings)" data-role="tagsinput" class="form-control" required>
                    <div class="invalid-tooltip">
                        Servings are required!
                    </div>
                </div>
                <div class="form-group position-relative error-l-50">
                    <label>Subcategory</label>
                    <input type="text" name="subcategories" value="@Html.DisplayFor(modelItem => item.subcategories)" data-role="tagsinput" class="form-control" required>
                    <div class="invalid-tooltip">
                        Subcategories are required!
                    </div>
                </div>

                <button type="submit" class="btn btn-primary mb-0" style="background-color: #6fb327; border-color: #6fb327">Save</button>
            </form>
        </div>
    </div>
}

