@model Lifesum.Models.Exercise

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Exercise</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" class="needs-validation tooltip-label-right" novalidate>
            @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
            <div class="form-group">
                <input asp-for="exerciseId" type="hidden" class="form-control" />
            </div>
            <div class="form-group position-relative error-l-50">
                <label>Title</label>
                <input asp-for="title" class="form-control" required />
                <div class="invalid-tooltip">
                    Title is required!
                </div>
                @*<span asp-validation-for="title" class="text-danger"></span>*@
            </div>
            <div class="form-group position-relative error-l-50">
                <label>Calories</label>
                <input type="number" step="any" asp-for="calories" class="form-control" required />
                <div class="invalid-tooltip">
                    Calories are required!
                </div>
                @*<span asp-validation-for="calories" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" style="background-color:#6fb327; border-color:#6fb327" />
            </div>
        </form>
    </div>
</div>

